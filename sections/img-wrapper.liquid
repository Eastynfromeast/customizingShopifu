{{'section-image-wrapper.css' | asset_url | stylesheet_tag}}

<div class="wrapperTitle">
    {% if section.settings.wrapper-title != blank%}
        <h2> {{section.settings.wrapper-title}} </h2>
    {% endif %}
</div>



{% schema %}
{
    "name": "Image Wrap",
    "settings": [
    {
        "type": "text",
        "id": "wrapper-title",
        "label": "Wrapper Heading",
        "default": "Text columns with images"
    },
    {
        "type": "select",
        "id": "wrap_align_text",
        "label": "Text alignment",
        "default": "left",
        "options": [
        {
            "value": "left",
            "label": "Left"
        },
        {
            "value": "center",
            "label": "Centered"
        }
        ]
    }
    ],
    "blocks": [
    {
        "type": "text_block",
        "name": "Img Column",
        "settings": [
            {
                "type": "checkbox",
                "id": "enable_image",
                "label":"Column Show image",
                "default": true
            },
            {
                "type": "image_picker",
                "id": "imgColumn_image_01",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "imgColumn_title_01",
                "label":"Heading",
                "default": "Add a title or tagline"
            },
            {
                "type": "richtext",
                "id": "imgColumn_text_01",
                "label": "Text",
                "default":"<p>Share blog posts, products, or promotions with your customers. Use this text to describe products, share details on availability and style, or as a space to display recent reviews or FAQs.</p>"
            },
            {
                "type": "text",
                "id": "imgColumnbutton_label",
                "label": "Button label"
            },
            {
                "type": "url",
                "id": "imgColumn_button_link",
                "label": "Button link"
            }
        ]
    }
    ],
  "presets": [
        {
            "name": "Image Wrapper",
            "category": "Main",
            "blocks": [
            {
                "type": "text_block"
            },
            {
                "type": "text_block"
            },
            {
                "type": "text_block"
            }
            ]
        }
    ]
}
{% endschema %}